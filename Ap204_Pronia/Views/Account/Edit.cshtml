@model EditUserVM
@{
    ViewData["Title"] = "Edit";
}



<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="~/assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Edit Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Edit</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">

                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-lg-6  pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Edit</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label>First Name</label>
                                    <input asp-for="Firstname" placeholder="First Name " class="border border-info" />
                                    <span asp-validation-for="Firstname" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label>Last Name</label>
                                    <input asp-for="Lastname" placeholder="Last Name" class="border border-info" />
                                    <span asp-validation-for="Lastname" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Email Address*</label>
                                    <input asp-for="Email" readonly placeholder="Email Address" class="border border-info" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Username</label>
                                    <input asp-for="Username" placeholder="Username" class="border border-info" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                 <div class="col-md-6">
                                    <label> Current Password</label>
                                    <input asp-for="CurrenPassword" placeholder="Current Password" class="border border-info" />
                                    <span asp-validation-for="CurrenPassword" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label> New Password</label>
                                    <input asp-for="Password" placeholder=" New Password" class="border border-info" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Confirm New Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm New Password" class="border border-info" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                               
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary" type="submit">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>