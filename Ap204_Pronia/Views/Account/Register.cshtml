<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="~/assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">

                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-lg-6  pt-lg-0">
                    <form method="post" runat="server">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label>First Name</label>
                                    <input asp-for="Firstname" placeholder="First Name " class="border border-info" />
                                    <span asp-validation-for="Firstname" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label>Last Name</label>
                                    <input asp-for="Lastname" placeholder="Last Name" class="border border-info" />
                                    <span asp-validation-for="Lastname" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Email Address*</label>
                                    <input asp-for="Email" placeholder="Email Address" class="border border-info" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Username</label>
                                    <input asp-for="Username" placeholder="Username" class="border border-info" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Password</label>
                                    <input asp-for="Password" placeholder="Password" class="border border-info" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="border border-info" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="col-md-8 m-3">
                                    <div class="check-box">
                                        <input asp-for="IHaveReadIAccept" id="IHaveReadIAccept" />
                                        <label for="IHaveReadIAccept">I Have Read I Accept <a href="https://www.hhs.gov/hipaa/for-professionals/privacy/index.html" class="text-color-primary">Privacy Rules</a></label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary" type="submit">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

